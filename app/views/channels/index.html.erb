<h1>Channels</h1>

<table id="newspaper-b" summary="List of all my TV Shows">
	<thead>
	  <tr>
	    <th scope ="col">Channel</th>
	    <th scope ="col">Name</th>
	    <th scope ="col"></th>
	    <th scope ="col"></th>
	  </tr>
	</thead>

<% @channels.each do |channel| %>
  <tr>
    <td id="name"><%= channel.channel_no %></td>
    <td><%= channel.name %></td>
    <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
    <td><%= link_to 'Delete', channel, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Channel', new_channel_path %><br />
<%= link_to 'Go to Shows', tv_shows_path %>

